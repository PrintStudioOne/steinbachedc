{% extends "base.twig" %}

{% block content %}

{% include 'hero.twig' %} {# <section id="hero"> #}

<div class="content-wrapper">

	{# VISION #}
	{% set id = "intro" %}
	{% set heading = post.meta(id ~ '_heading') %}
	{% set subheading = post.meta(id ~ '_subheading') %}
	{% set text = post.meta(id ~ '_text')|wpautop %}
	{% set image = post.meta(id ~ '_image') %}
	{% set gallery = post.meta(id ~ '_gallery') %}
	{% set video = post.meta(id ~ '_video') %}
	{% set repeater = post.meta(id ~ '_repeater') %}
	{% set buttons = post.meta(id ~ '_buttons') %}
	{% set button = post.meta(id ~ '_button') %}

	<{{ heading ? 'section' : 'div' }} id="{{ id }}" class="section--{{ id }} section--default">
		<div class="admin-label">#{{ id }}</div>
		<div class="content width--default reveal">
			{% if heading %}
			<h2 class="{{ id }}__heading heading--overline">{{ heading }}</h2>
			{% endif %}
			{% if text %}
			<div class="{{ id }}__text text">{{ text }}</div>
			{% endif %}
		</div>
	</{{ heading ? 'section' : 'div' }}>

	{# OUR TEAM #}
	{% set id = "team" %}
	{% set heading = post.meta(id ~ '_heading') %}
	{% set subheading = post.meta(id ~ '_subheading') %}
	{% set text = post.meta(id ~ '_text')|wpautop %}
	{% set image = post.meta(id ~ '_image') %}
	{% set gallery = post.meta(id ~ '_gallery') %}
	{% set video = post.meta(id ~ '_video') %}
	{% set repeater = post.meta(id ~ '_repeater') %}
	{% set buttons = post.meta(id ~ '_buttons') %}
	{% set button = post.meta(id ~ '_button') %}

	<{{ heading ? 'section' : 'div' }} id="{{ id }}" class="section--{{ id }} section--block background--primary-500">
		<div class="admin-label">#{{ id }}</div>
		<div class="content width--default reveal">
			{% if heading %}
			<h2 class="{{ id }}__heading heading--overline">{{ heading }}</h2>
			{% endif %}
			<ul class="team_list no-bullets">
				{% for member in team %}
				<li class="member">
					<picture class="member__image">
						{% if member.member_image %}
						<img src="{{ Image(member.member_image).src|resize(330) }}" alt="{{ Image(member.member_image).alt }}" loading="lazy">
						{% else %}
						{{ placeholder }}
						{% endif %}
					</picture>
					<h3 class="member__name">{{ member.title }}</h3>
					<p class="member__role">{{ member.member_role }}</p>
				</li>
				{% endfor %}
			</ul>
		</div>
	</{{ heading ? 'section' : 'div' }}>

	{# CORE SERVICES #}
	{% set id = "services" %}
	{% set heading = post.meta(id ~ '_heading') %}
	{% set subheading = post.meta(id ~ '_subheading') %}
	{% set text = post.meta(id ~ '_text')|wpautop %}
	{% set image = post.meta(id ~ '_image') %}
	{% set gallery = post.meta(id ~ '_gallery') %}
	{% set video = post.meta(id ~ '_video') %}
	{% set repeater = post.meta(id ~ '_repeater') %}
	{% set buttons = post.meta(id ~ '_buttons') %}
	{% set button = post.meta(id ~ '_button') %}

	<{{ heading ? 'section' : 'div' }} id="{{ id }}" class="section--{{ id }} section--default">
		<div class="admin-label">#{{ id }}</div>
		<div class="content width--default reveal">
			{% if heading %}
			<h2 class="{{ id }}__heading heading--overline">{{ heading }}</h2>
			{% endif %}
			{% if repeater %}
			<ol class="{{ id }}__repeater ol--custom columns--2">
				{% for item in repeater %}
				<li class="item">
					{% if item.label %}
					<p class="item__label h3">{{ item.label }}</p>
					{% endif %}
				</li>
				{% endfor %}
			</ol>
			{% endif %}
		</div>
	</{{ heading ? 'section' : 'div' }}>

</div>

{% endblock %}