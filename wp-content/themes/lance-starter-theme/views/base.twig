{% block html_head_container %}

{% include 'html-header.twig' %}  {# <html> <head> #}
	{% block head %}
	{% endblock %}
		{# Header scripts #}
		{# favicon #}
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
		<link rel="manifest" href="/favicon/site.webmanifest">
		<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#567e68">
		<link rel="shortcut icon" href="/favicon/favicon.ico">
		<meta name="msapplication-TileColor" content="#567e68">
		<meta name="msapplication-config" content="/favicon/browserconfig.xml">
		<meta name="theme-color" content="#ffffff">

	</head>
{% endblock %}

	<body class="{{ body_class }} {% if not fn('is_single') %}page-{{ post.slug }}{% endif %}" data-template="base.twig">

		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		{# Dev tools #}
		{% include 'partial/dev-tools.twig' %}
		{# Notifications #}
		{% set notifications = "false" %}
		{% for notification in options.notifications if notification.enable == "true" %}
			{% set notifications = "true" %}
		{% endfor %}
		{# Placeholder image #}
		{% set placeholder = '<img src="'~ site.theme.link ~'/static/images/placeholder.png" alt="" class="placeholder">' %}
		{# Loader #}
		{% include 'partial/loader.twig' %}

		{# Header #}
		{% block header %}				
			{% include 'header.twig' %} {# <header> #}
		{% endblock %}

		{# Main #}
		<main id="content">
			{% block content %}
			{% endblock %}
		</main>

		{# Footer #}
		<footer id="site-footer" cla>
			{% block footer %}
				{% include 'footer.twig' %}
			{% endblock %}

			{{ function('wp_footer') }}
			{# Footer scripts #}

		</footer>

	</body>

</html>
