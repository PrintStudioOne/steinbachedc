{% extends "base.twig" %}

{% block content %}

{% include 'hero.twig' %} {# <section id="hero"> #}

<div class="content-wrapper">

	{# OUR GOAL #}
	{% set id = "intro" %}
	{% set heading = post.meta(id ~ '_heading') %}
	{% set subheading = post.meta(id ~ '_subheading') %}
	{% set text = post.meta(id ~ '_text')|wpautop %}
	{% set image = post.meta(id ~ '_image') %}
	{% set gallery = post.meta(id ~ '_gallery') %}
	{% set video = post.meta(id ~ '_video') %}
	{% set repeater = post.meta(id ~ '_repeater') %}
	{% set buttons = post.meta(id ~ '_buttons') %}
	{% set button = post.meta(id ~ '_button') %}

	<{{ heading ? 'section' : 'div' }} id="{{ id }}" class="section--{{ id }} section--default">
		<div class="admin-label">#{{ id }}</div>
		<div class="content width--default reveal">
			{% if heading %}
			<h2 class="{{ id }}__heading heading--overline">{{ heading }}</h2>
			{% endif %}
			{% if text %}
			<div class="{{ id }}__text text">{{ text }}</div>
			{% endif %}
		</div>
	</{{ heading ? 'section' : 'div' }}>

	{# FOUNDATIONAL SUPPORTS #}
	{% set id = "supports" %}
	{% set heading = post.meta(id ~ '_heading') %}
	{% set subheading = post.meta(id ~ '_subheading') %}
	{% set text = post.meta(id ~ '_text')|wpautop %}
	{% set image = post.meta(id ~ '_image') %}
	{% set gallery = post.meta(id ~ '_gallery') %}
	{% set video = post.meta(id ~ '_video') %}
	{% set repeater = post.meta(id ~ '_repeater') %}
	{% set buttons = post.meta(id ~ '_buttons') %}
	{% set button = post.meta(id ~ '_button') %}

	<{{ heading ? 'section' : 'div' }} id="{{ id }}" class="section--{{ id }} section--background-image">
		<div class="admin-label">#{{ id }}</div>
		<div class="content width--default reveal">
			{% if heading %}
			<h2 class="{{ id }}__heading heading--overline">{{ heading }}</h2>
			{% endif %}
			{% if subheading %}
			<h3 class="{{ id }}__subheading">{{ subheading }}</h3>
			{% endif %}
			{% if text %}
			<div class="{{ id }}__text text">{{ text }}</div>
			{% endif %}
		</div>
		{% if image %}
		<picture class="{{ id }}__image picture--background">
			<img src="{{ Image(image).src }}" alt="{{ Image(image).alt }}">
		</picture>
		{% endif %}
	</{{ heading ? 'section' : 'div' }}>

	{# OUR STEINBACH ADVANTAGE #}
	{% set id = "advantage" %}
	{% set heading = post.meta(id ~ '_heading') %}
	{% set subheading = post.meta(id ~ '_subheading') %}
	{% set text = post.meta(id ~ '_text')|wpautop %}
	{% set image = post.meta(id ~ '_image') %}
	{% set gallery = post.meta(id ~ '_gallery') %}
	{% set video = post.meta(id ~ '_video') %}
	{% set repeater = post.meta(id ~ '_repeater') %}
	{% set buttons = post.meta(id ~ '_buttons') %}
	{% set button = post.meta(id ~ '_button') %}

	<{{ heading ? 'section' : 'div' }} id="{{ id }}" class="section--{{ id }} section--block background--primary-100">
		<div class="admin-label">#{{ id }}</div>
		<div class="content width--default reveal">
			{% if heading %}
			<h2 class="{{ id }}__heading heading--overline">{{ heading }}</h2>
			{% endif %}
			{% if repeater %}
			<ol class="{{ id }}__repeater ol--custom columns--2">
				{% for item in repeater %}
				<li class="item">
					{% if item.label %}
					<p class="item__label h3">{{ item.label }}</p>
					{% endif %}
				</li>
				{% endfor %}
			</ol>
			{% endif %}
		</div>
	</{{ heading ? 'section' : 'div' }}>

	{# PRAIRIE CITY, GLOBAL REACH #}
	{% set id = "reach" %}
	{% set heading = post.meta(id ~ '_heading') %}
	{% set subheading = post.meta(id ~ '_subheading') %}
	{% set text = post.meta(id ~ '_text')|wpautop %}
	{% set image = post.meta(id ~ '_image') %}
	{% set gallery = post.meta(id ~ '_gallery') %}
	{% set video = post.meta(id ~ '_video') %}
	{% set repeater = post.meta(id ~ '_repeater') %}
	{% set buttons = post.meta(id ~ '_buttons') %}
	{% set button = post.meta(id ~ '_button') %}

	<{{ heading ? 'section' : 'div' }} id="{{ id }}" class="section--{{ id }} section--block">
		<div class="admin-label">#{{ id }}</div>
		<div class="content content--split width--default reveal">
			{% if image %}
			<picture class="{{ id }}__image">
				<img src="{{ Image(image).src }}" alt="{{ Image(image).alt }}" loading="lazy">
			</picture>
			{% endif %}
			<div class="{{ id }}__container">
				{% if heading %}
				<h2 class="{{ id }}__heading heading--overline">{{ heading }}</h2>
				{% endif %}
				{% if subheading %}
				<h3 class="{{ id }}__subheading">{{ subheading }}</h3>
				{% endif %}
				{% if text %}
				<div class="{{ id }}__text text">{{ text }}</div>
				{% endif %}
			</div>
		</div>
	</{{ heading ? 'section' : 'div' }}>

	{# PROUD HERITAGE, EXCITING FUTURE #}
	{% set id = "heritage" %}
	{% set heading = post.meta(id ~ '_heading') %}
	{% set subheading = post.meta(id ~ '_subheading') %}
	{% set text = post.meta(id ~ '_text')|wpautop %}
	{% set image = post.meta(id ~ '_image') %}
	{% set gallery = post.meta(id ~ '_gallery') %}
	{% set video = post.meta(id ~ '_video') %}
	{% set repeater = post.meta(id ~ '_repeater') %}
	{% set buttons = post.meta(id ~ '_buttons') %}
	{% set button = post.meta(id ~ '_button') %}

	<{{ heading ? 'section' : 'div' }} id="{{ id }}" class="section--{{ id }} section--block background--primary">
		<div class="admin-label">#{{ id }}</div>
		<div class="content width--default">
			{% if heading %}
			<h2 class="{{ id }}__heading heading--overline mobile--only reveal">{{ heading }}</h2>
			{% endif %}
			{% if repeater %}
			<ul class="{{ id }}__repeater picture--circle_repeater no-bullets">
				{% for item in repeater %}
				<li class="item reveal">
					<div class="picture--circle_container">
						<picture class="item__image picture--circle">
							{% if item.image %}
							<img src="{{ Image(item.image).src }}" alt="{{ Image(item.image).alt }}" loading="lazy">
							{% else %}
							{{ placeholder }}
							{% endif %}
						</picture>
					</div>
					<div class="item__content_container">
						{% if heading and loop.first %}
						<h2 class="{{ id }}__heading heading--overline mobile--hidden">{{ heading }}</h2>
						{% endif %}
						{% if heading %}
						<h3 class="item__heading">{{ item.heading }}</h3>
						{% endif %}
						{% if item.text %}
						<p class="item__text">{{ item.text }}</p>
						{% endif %}
					</div>
				</li>
				{% endfor %}
			</ul>
			{% endif %}
		</div>
	</{{ heading ? 'section' : 'div' }}>

	{# A REGIONAL HUB #}
	{% set id = "hub" %}
	{% set heading = post.meta(id ~ '_heading') %}
	{% set subheading = post.meta(id ~ '_subheading') %}
	{% set text = post.meta(id ~ '_text')|wpautop %}
	{% set image = post.meta(id ~ '_image') %}
	{% set gallery = post.meta(id ~ '_gallery') %}
	{% set video = post.meta(id ~ '_video') %}
	{% set repeater = post.meta(id ~ '_repeater') %}
	{% set buttons = post.meta(id ~ '_buttons') %}
	{% set button = post.meta(id ~ '_button') %}

	<{{ heading ? 'section' : 'div' }} id="{{ id }}" class="section--{{ id }} section--default">
		<div class="admin-label">#{{ id }}</div>
		<div class="content content--split width--default reveal">
			{% if image %}
			<picture class="{{ id }}__image">
				<img src="{{ Image(image).src }}" alt="{{ Image(image).alt }}" loading="lazy">
			</picture>
			{% endif %}
			<div class="{{ id }}__container">
				{% if heading %}
				<h2 class="{{ id }}__heading heading--overline">{{ heading }}</h2>
				{% endif %}
				{% if subheading %}
				<h3 class="{{ id }}__subheading">{{ subheading }}</h3>
				{% endif %}
				{% if text %}
				<div class="{{ id }}__text text">{{ text }}</div>
				{% endif %}
				{% if repeater %}
				<ul class="{{ id }}__repeater no-bullets">
					{% for item in repeater %}
					<li class="item">
						{% if item.image %}
						<picture class="item__image">
							<img src="{{ Image(item.image).src }}" alt="{{ Image(item.image).alt }}" loading="lazy">
						</picture>
						{% endif %}
						{% if item.text %}
						<p class="item__text">{{ item.text }}</p>
						{% endif %}
					</li>
					{% endfor %}
				</ul>
				{% endif %}
			</div>
		</div>
	</{{ heading ? 'section' : 'div' }}>

</div>

{% endblock %}